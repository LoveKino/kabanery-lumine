{
    "parser": "babel-eslint",
    "globals": {
        "Promise": true,
        "describe": true,
        "it": true,
        "React": true
    },
    "rules": {
      "indent": [
        "error",
        4,
        { "SwitchCase": 1 }
      ],
      "quotes": [
        2,
        "single"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-trailing-spaces": 2,
      "eqeqeq": [
        2,
        "allow-null"
      ]
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended"
}
